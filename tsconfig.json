{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "shadow-color",
            "shadow-opacity",
            "shadow-offset",
            "shadow-radius",
            "padding-horizontal",
            "padding-vertical",
            "margin-vertical",
            "margin-horizontal",
            "tint-color",
            "aspect-ratio",
            "elevation",
            "resize-mode"
          ]
        }
      }
    ]
  },
  "exclude": [
    ".expo",
    ".expo-shared",
    ".github",
    "coverage",
    "*.testskip.tsx",
    "*.skiptest.tsx",
    "node_modules"
  ],
  "include": ["**/*.ts", "**/*.tsx"]
}
