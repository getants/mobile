{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "paths": {
      "@/assets": [
        "assets"
      ],
      "@/components": [
        "components"
      ],
      "@/graphqls": [
        "graphqls"
      ],
      "@/screens": [
        "screens"
      ],
      "@/stacks": [
        "stacks"
      ],
      "@/utils/*": [
        "utils/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "shadow-color",
            "shadow-opacity",
            "shadow-offset",
            "shadow-radius",
            "padding-horizontal",
            "padding-vertical",
            "margin-vertical",
            "margin-horizontal",
            "tint-color",
            "aspect-ratio",
            "elevation",
            "resize-mode"
          ]
        }
      }
    ]
  },
  "exclude": [
    ".expo",
    ".expo-shared",
    ".github",
    "coverage",
    "node_modules"
  ],
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "**/*.ts",
    "**/*.tsx"
  ]
}
